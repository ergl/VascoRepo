
<!--
  This file is used to configure the lock service for both server side and client side
  All sub-attributes must be put between two lockService tags.
  By Cheng
-->

<lockService>
    <lockServerCluster lsNum="1">
    	<lockServer lsId="0" lsIP="127.0.0.1" lsPort="10000" dbPort="10001"/>
    </lockServerCluster>
    <lockClientGroup lcNum="1">
    	<lockClient lcId="0" lcIP="127.0.0.1" lcPort="10002"/>
    </lockClientGroup>
    
    <collectionOfConflicts numOfConflicts="3">
		<conflict leftOperand="a" rightOperand="b"/>
		<conflict leftOperand="b" rightOperand="a"/>
		<conflict leftOperand="c" rightOperand="c"/>
	</collectionOfConflicts>
</lockService>
